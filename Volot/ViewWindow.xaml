        <Button Content="right" Margin="0,225,10,0" VerticalAlignment="Top" Width="39" RenderTransformOrigin="0.844,0.569" Click="right1_Click" HorizontalAlignment="Right" Grid.Column="1" Height="22"/>
    </Grid>
</Window>
